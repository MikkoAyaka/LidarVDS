<hc:GlowWindow x:Class="LidarVDS.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:hc="https://handyorg.github.io/handycontrol"
               xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
               xmlns:local="clr-namespace:LidarVDS"
               mc:Ignorable="d"
               WindowStartupLocation="CenterScreen"
               ShowNonClientArea="False"
               Height="800" Width="1440">
    <Grid Height="80" Background="White" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow">
        <hc:Col HorizontalAlignment="Left">
            <hc:SimpleStackPanel Orientation="Horizontal">
                <Image Source="Resources/Images/雷达.png" Width="60" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBox Text="{StaticResource AppTitle}" FontSize="25" BorderThickness="0" Margin="25,0,0,0"/>
            </hc:SimpleStackPanel>
        </hc:Col>
        <hc:Col Span="10">
            <hc:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavHelp}"/>
                <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavSettings}"/>
                <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavDataAnalysis}"/>
                <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavSimulator}"/>
                <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavHomePage}"/>
                <Button Style="{StaticResource ButtonPrimary}" FontSize="16" Height="48" Width="140" hc:BorderElement.CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"><StaticResource ResourceKey="NavEasyUse"/></TextBlock>
                        <Image Source="Resources/Images/下拉.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality" Margin="15,0,0,0"></Image>
                    </StackPanel> 
                </Button>
                <Button Width="30" Margin="50,0,0,0" Click="HideWindow" Padding="0" BorderThickness="0">
                    <Image Source="Resources/Images/最小化.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button>
                <Button Width="30" Margin="10,0,30,0" Click="CloseWindow" Padding="0" BorderThickness="0">
                    <Image Source="Resources/Images/关闭.png" RenderOptions.BitmapScalingMode="HighQuality" />
                </Button>
            </hc:SimpleStackPanel>
        </hc:Col>
        
    </Grid>
</hc:GlowWindow>