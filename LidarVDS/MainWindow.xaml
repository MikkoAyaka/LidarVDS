<hc:GlowWindow x:Class="LidarVDS.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:hc="https://handyorg.github.io/handycontrol"
               xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
               xmlns:local="clr-namespace:LidarVDS"
               mc:Ignorable="d"
               WindowStartupLocation="CenterScreen"
               ShowNonClientArea="False"
               Height="800" Width="1440">
    <Grid Height="80" Background="White" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow">
        <hc:Col HorizontalAlignment="Left">
            <hc:SimpleStackPanel Orientation="Horizontal">
                <Image Source="Resources/Images/雷达.png" Width="60" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBox Text="Lidar - VDS" FontSize="25" BorderThickness="0" Margin="25,0,0,0"/>
            </hc:SimpleStackPanel>
        </hc:Col>
        <hc:Col Span="10">
            <hc:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <RadioButton Style="{StaticResource NavButton}" Content="帮助"/>
                <RadioButton Style="{StaticResource NavButton}" Content="设置"/>
                <RadioButton Style="{StaticResource NavButton}" Content="数据分析"/>
                <RadioButton Style="{StaticResource NavButton}" Content="仿真环境"/>
                <RadioButton Style="{StaticResource NavButton}" Content="主页"/>
                <Button Style="{StaticResource ButtonPrimary}" FontSize="16" Height="48" Width="140" hc:BorderElement.CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">快捷使用</TextBlock>
                        <Image Source="Resources/Images/下拉.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality" Margin="15,0,0,0"></Image>
                    </StackPanel> 
                </Button>
                <Image Source="Resources/Images/最小化.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality" Margin="50,0,0,0" MouseDown="HideWindow"/>
                <Image Source="Resources/Images/关闭.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality" Margin="10,0,30,0" MouseDown="CloseWindow"/>
            </hc:SimpleStackPanel>
        </hc:Col>
        
    </Grid>
</hc:GlowWindow>