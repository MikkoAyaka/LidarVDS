<hc:Window x:Class="LidarVDS.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
           xmlns:local="clr-namespace:LidarVDS"
           mc:Ignorable="d"
           WindowStartupLocation="CenterScreen"
           ShowNonClientArea="False"
           WindowStyle="None"
           AllowsTransparency="True"
           Background="Transparent"
           BorderThickness="0"
           Height="800" Width="1440">
    
    <!-- 导航栏背景 -->
    <Border CornerRadius="20,20,0,0"
            Background="{StaticResource Brush-NavBarBackground}"
            Height="80"
            VerticalAlignment="Top" 
            MouseLeftButtonDown="DragWindow">
        <!-- 导航栏内容 -->
        <Grid>
            <!-- 设置 文本、按钮 阴影 -->
            <Grid.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="10" Opacity="0.7" Direction="0" />
            </Grid.Effect>
            <!-- 左侧 Logo 和 标题 -->
            <hc:Col HorizontalAlignment="Left">
                <hc:SimpleStackPanel Orientation="Horizontal">
                    <Image Source="Resources/Images/雷达.png" Width="60" RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBox Text="{StaticResource AppTitle}" Background="Transparent" FontSize="25"
                             BorderThickness="0"
                             Margin="25,0,0,0" />
                </hc:SimpleStackPanel>
            </hc:Col>
            <!-- 右侧 -->
            <hc:Col HorizontalAlignment="Right">
                <hc:SimpleStackPanel Orientation="Horizontal">
                    <!-- 导航按钮 -->
                    <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavHelp}" />
                    <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavSettings}" />
                    <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavDataAnalysis}" />
                    <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavSimulator}" />
                    <RadioButton Style="{StaticResource NavButton}" Content="{StaticResource NavHomePage}" />
                    <!-- 快速使用 -->
                    <Button Style="{StaticResource ButtonPrimary}" FontSize="16" Height="48" Width="140"
                            hc:BorderElement.CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center">
                                <StaticResource ResourceKey="NavEasyUse" />
                            </TextBlock>
                            <Image Source="Resources/Images/下拉.png" Width="30"
                                   RenderOptions.BitmapScalingMode="HighQuality" Margin="15,0,0,0">
                            </Image>
                        </StackPanel>
                    </Button>
                    <!-- 最小化 -->
                    <Button Width="30" Margin="50,0,0,0" Click="HideWindow" Padding="0" BorderThickness="0"
                            Background="Transparent">
                        <Image Source="Resources/Images/最小化.png" RenderOptions.BitmapScalingMode="HighQuality" />
                    </Button>
                    <!-- 关闭 -->
                    <Button Width="30" Margin="10,0,30,0" Click="CloseWindow" Padding="0" BorderThickness="0"
                            Background="Transparent">
                        <Image Source="Resources/Images/关闭.png" RenderOptions.BitmapScalingMode="HighQuality" />
                    </Button>
                </hc:SimpleStackPanel>
            </hc:Col>
        </Grid>
    </Border>


</hc:Window>