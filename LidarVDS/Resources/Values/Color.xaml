<!-- 色彩、刷子相关的常量都放这里 -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="Brush-NavBarBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.0" Color="#6DA6F6"/>
        <GradientStop Offset="1.0" Color="#6DA6F6"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Brush-FastUseBackground" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0.0" Color="#73FCF7"/>
        <GradientStop Offset="1.0" Color="#53BAEE"/>
    </LinearGradientBrush>
    <Brush x:Key="Brush-PageBackground">White</Brush>
</ResourceDictionary>